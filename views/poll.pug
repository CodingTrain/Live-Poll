doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title Live Coding Train Poll
    link(rel="stylesheet" href="/css/style.css")
    link(rel="stylesheet" href="/css/poll-results.css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.1.9/p5.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.0.3/socket.io.min.js")
    
  body
    main#poll-result-main
      h1 The Coding Train Live Poll
      h2=poll.question
      
      div#results
        each val, index in poll.options
          div.option
            div.bar-title=val
            div(id="progressBar_" + index class="progressBar")
      p#totalVotes

    template(data-styling=styling)

    //- workaround because i don't know how to pass variables in pug
    template(data-styling=styling)

    script(src="/js/classes/poll.js")
    script(src="/js/sketches/poll.js")
